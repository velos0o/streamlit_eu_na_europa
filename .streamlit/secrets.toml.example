##########################################
# EXEMPLO DE CONFIGURAÇÃO DE SECRETS PARA O PROJETO EU NA EUROPA
# 
# INSTRUÇÕES DE USO:
# 1. Copie este arquivo para .streamlit/secrets.toml
# 2. Preencha com as credenciais reais
# 3. Mantenha o arquivo secrets.toml seguro (nunca comite no Git)
# 4. Para deployment, adicione os secrets via dashboard do Streamlit Cloud
##########################################

# Credenciais do Bitrix24
[bitrix]
webhoook_token = "seu_token_aqui"
bitrix_url = "https://sua-instancia.bitrix24.com"
oauth_client_id = "seu_client_id_aqui"
oauth_client_secret = "seu_client_secret_aqui"

# Credenciais do Google Sheets
[google]
[google.sheets]
# Serviço principal usado para leitura de planilhas no Google Sheets
# Copie o conteúdo exato do arquivo JSON de credenciais aqui
type = "service_account"
project_id = "PLACEHOLDER"
private_key_id = "PLACEHOLDER"
private_key = """-----BEGIN PRIVATE KEY-----
PLACEHOLDER_PARA_SUA_CHAVE_PRIVADA
-----END PRIVATE KEY-----"""
client_email = "PLACEHOLDER@PLACEHOLDER.iam.gserviceaccount.com"
client_id = "PLACEHOLDER"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "PLACEHOLDER"
universe_domain = "googleapis.com"

# Credenciais de acesso ao Google Drive (opcional)
[google.drive]
api_key = "PLACEHOLDER"
folder_id = "PLACEHOLDER"

# Credenciais de acesso ao banco de dados
[database]
host = "localhost"
port = 3306
username = "usuario_db"
password = "senha_db"
name = "nome_db"

# Credenciais para envio de e-mails
[email]
smtp_server = "PLACEHOLDER"
smtp_port = 587
username = "PLACEHOLDER"
password = "PLACEHOLDER"
from_email = "PLACEHOLDER"

# Credenciais para Azure Storage (se utilizado)
[azure]
connection_string = "PLACEHOLDER"
storage_account_name = "PLACEHOLDER"
storage_account_key = "PLACEHOLDER"

# Chave de API para Mapbox (se utilizado para mapas)
[mapbox]
api_key = "PLACEHOLDER"

# Credenciais para AWS (se utilizado)
[aws]
access_key_id = "PLACEHOLDER"
secret_access_key = "PLACEHOLDER"
region = "PLACEHOLDER"
bucket_name = "PLACEHOLDER"

# API de Comune Italiano (API específica do projeto)
[comune_api]
api_key = "PLACEHOLDER"
endpoint = "PLACEHOLDER"

# Chaves customizadas específicas para o projeto
[custom]
webhook_secret = "PLACEHOLDER"
encryption_key = "PLACEHOLDER"

# Outras chaves de API (se aplicável)
[apis]
google_maps_key = "sua_chave_google_maps_aqui"

# Chaves para serviços de storage (se aplicável)
[storage]
aws_access_key = "sua_access_key_aqui"
aws_secret_key = "sua_secret_key_aqui"
bucket_name = "nome_do_bucket"

